  "settings": {
    "index.refresh_interval": "5s",
    "analysis": {
      "analyzer": {
        "custom_analyzer": {
          "tokenizer": "classic_tokenizer",
          "filter": ["lowercase", "kstem"],
          "char_filter": [
            "remove_hypens_without_space"
          ]
        }
      },
      "char_filter": {
        "remove_hypens_without_space": {
          "type": "pattern_replace",
          "pattern": "(\\w+)(-)(\\w+)",
          "replacement": "$1$3"
        }
      }, 
